<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--圆形进度条-->
    <declare-styleable name="CircleProgressView">
        <attr name="circleColor" format="color"/>
        <attr name="circleProgressColor" format="color"/>
        <attr name="circleWidth" format="dimension"/>
        <attr name="circleTextColor" format="color"/>
        <attr name="circleTextSize" format="dimension"/>
        <attr name="circleStartAngle" format="integer"/>
        <attr name="circleAngle" format="integer"/>
    </declare-styleable>

    <!--横向进度条-->
    <declare-styleable name="HorizontalProgressView">
        <attr name="horizontalColor" format="color" />
        <attr name="horizontalProgressColor" format="color" />
    </declare-styleable>

    <!--开关按钮-->
    <declare-styleable name="SwitchButton">
        <attr name="selectColor" format="color"/>
        <attr name="normalColor" format="color"/>
        <attr name="buttonColor" format="color"/>
        <attr name="buttonPadding" format="dimension" />
        <attr name="switchRate" format="integer" />
    </declare-styleable>

    <!--验证码-->
    <declare-styleable name="CodesView">
        <attr name="codeTextColor" format="color" />
        <attr name="codeTextSize" format="dimension" />
        <attr name="codeTextNum" format="integer" />
        <attr name="codeLineColor" format="color" />
        <attr name="codeLineSize" format="dimension" />
        <attr name="codeLineNum" format="integer" />
        <attr name="codePointColor" format="color" />
        <attr name="codePointNum" format="integer" />
    </declare-styleable>

    <declare-styleable name="RadarView">
        <attr name="titleTextSize" format="dimension" />
    </declare-styleable>
</resources>